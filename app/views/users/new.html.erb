<% provide(:title , "New user sign up ") %>
<h1>Sign Up</h1>
<div class="well">
<%=  form_for(@user) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <fieldset>
    	<div class="control-group">
            <label class="control-label">User name:</label>
            <div class="controls">
                <%= f.text_field :username %> 
                 <p class="help-block">Please enter the username for your account</p>
            </div>
        </div>
    </fieldset>
    <fieldset>
    	<div class="control-group">
            <label class="control-label">First name:</label>
            <div class="controls">
                <%= f.text_field :firstname %>
            </div>
        </div>
    </fieldset>

    <fieldset>
    	<div class="control-group">
            <label class="control-label">Initial:</label>
            <div class="controls">
                <%= f.text_field :initial %>
                <p class="help-block">Optional</p>
            </div>
        </div>
    </fieldset>

    <fieldset>
    	<div class="control-group">
            <label class="control-label">Last name:</label>
            <div class="controls">
                <%= f.text_field :lastname %>
            </div>
        </div>
    </fieldset>

    <fieldset>
    	<div class="control-group">
            <label class="control-label">Sex:</label>
            <div class="controls">
                <%= f.select :sex,{:MALE=>1, :FEMALE=>2} %>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="control-group">
            <label class="control-label">City</label>
            <div class="controls">
                <%= f.text_field :city %>
                <p class="help-block">Please enter the city/town</p>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="control-group">
            <label class="control-label">State:</label>
            <div class="controls">
                <%= f.select :state, Country.find_by_code("IN").states.map{ |state| [state.name , state.id] } %>
                <p class="help-block">Please enter the State/Province</p>
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="control-group">
            <label class="control-label">Country:</label>
            <div class="controls">
                <%= f.select :country, Country.all.map{ |country| [country.name , country.id] } %>
                <p class="help-block">Please select the country</p>
            </div>
        </div>
    </fieldset>


<% end %>
</div>

