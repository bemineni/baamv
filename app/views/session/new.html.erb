<% provide(:title, "Login to your account") %>
<div id="login-box">
<h2 class="depth-line-bottom"> Login </h2>
<%= form_for(:session, url: session_index_path) do |f| %>
	<div >
		<fieldset>
        	<div >
            	<label >Email</label>
            	<div >
                	<%= f.text_field :email , :size=>25%>
            	</div>
        	</div>
    	</fieldset>
		<fieldset>
        	<div >
            	<label >Password</label>
            	<div >
                	<%= f.password_field :password, :size=>25 %> 
            	</div>
        	</div>
    	</fieldset>
        <fieldset>
    	   <button type="submit" class="button button-normal button-medium">Login</button>
        </fieldset>
    	<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>
	<% end %>
    <div style="min-height:300px;"></div>
</div>
