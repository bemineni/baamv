<% provide(:title, "Login to your account") %>
<div style="height:30px;">
	</div>
<h1> Login </h1>
<div style="height:10px;">
</div>
<div >
	<%= form_for(:session, url: session_index_path) do |f| %>
	<div >
		<fieldset>
        	<div >
            	<label >Email</label>
            	<div >
                	<%= f.text_field :email %>
            	</div>
        	</div>
    	</fieldset>
		<fieldset>
        	<div >
            	<label >Password</label>
            	<div >
                	<%= f.password_field :password %> 
            	</div>
        	</div>
    	</fieldset>
    	<button type="submit" >Submit</button>
    	<button type="button" >Cancel</button>
    	<br/>
    	<br/>
    	
    	<p>New user? <%= link_to "Sign up now!", signup_path %></p>
    	
	</div>
	<% end %>
	<div >
         This is something to flash
	</div>
	
</div>