
@import "compass";

@import "util";

@import "compass/css3/border-radius";
@import "compass/css3/images";

@import "compass/css3/border-radius";

//**********************************************************************************************
//	HTML
//**********************************************************************************************

.lotus-row{
  *{
    @include box-sizing(border-box);
  }
  min-height:1em;
  &:after{
    clear:both;
    display:table;
    content:" ";
  }
  &:before{
    clear:both;
    display:table;
    content:" ";
  }
  div[class^="col"]{
    display:block;
    float:left;
    min-width:10px;
    @include box-sizing(border-box);
    position:relative;
  }
  .col1{
      width:8.33333%;
      min-width:8.33333%;
      max-width:8.33333%;
  }
  .col2{
      width:16.66666%;
      min-width:16.66666%;
      max-width:16.66666%;
  }
  .col3{
      width:25%;
      min-width:25%;
      max-width:25%;
  }
  .col4{
      width:33.33333%;
      min-width:33.33333%;
      max-width:33.33333%;
  }
  .col5{
      width:41.66666%;
      min-width:41.66666%;
      max-width:41.66666%;
  }
  .col6{
      width:50%;
      min-width:50%;
      max-width:50%;
  }
  .col7{
      width:58.33333%;
      min-width:58.33333%;
      max-width:58.33333%;
  }
  .col8{
      width:66.66666%;
      min-width:66.66666%;
      max-width:66.66666%;
  }
  .col9{
      width:75%;
      min-width:75%;
      max-width:75%;
  }
  .col10{
      width:83.33333%;
      min-width:83.33333%;
      max-width:83.33333%;
  }
  .col11{
     width:91.66666%;
     min-width:91.66666%;
     max-width:91.66666%;
  }
  .col12{
     width:100%;
     min-width:100%;
  }

}

a{
   outline: 0;
}

input::-moz-focus-inner { 
  border: 0; 
}

*:focus{
	outline:0;
}


 .lotus-form-element
   {
		  display: block;
		  width: 100%;
          margin-top:5px;
		  padding: 6px 12px;
		  font-size: 1em;
		  line-height: 1.428571429;
		  color: #555;
		  vertical-align: middle;
		  background-color: #fff;
		  background-image: none;
		  border: 1px solid #ccc;
		  @include border-radius(4px);
          @include box-sizing(border-box);
          font-family:Arial,Helvetica,Sans-serif;
     select
     {
        //For select that outside div will be the mb-form-element
        @include box-shadow(rgba(0, 0, 0, 0.10) 0px 1px 1px inset );  
     }

   }


fieldset
{
	border:none;
	margin:5px 0px 5px 0px;
	padding:2px 0px 2px 0px;

	*{
	    margin-top:7px;
	    margin-bottom:7px;
	}
}

textarea,input[type=text],input[type=password]{
	
	@include border-radius(5px);
	border: 1px solid #999;
	display:block;
	@include box-shadow(0px 1px 0px white, 0px 1px 3px 0px rgba(0, 0, 0, 0.5) inset);
}

textarea{
   	font-size:1.2em;
	padding-left:8px;
	padding-right:8px;
	padding-top:8px;
}

input[type=text],input[type=password]{
	font-size:1.2em;
	padding-left:8px;
	padding-right:8px;
}

select:focus,input[type=password]:focus,input[type=text]:focus{
	@include single-box-shadow($purplishred,0px ,0px,3px,false);
	border:1px solid $red-dark;
}

select,option{
	background:#ffffff;
	@include border-radius(5px);
	font-size:1.2em;
}

h2{
	padding:5px 0 5px 0;
}



//**********************************************************************************************
//	Utilities
//**********************************************************************************************

.button
{
	@include border-rounded(2);
	white-space: nowrap;
	cursor:pointer;
	display:inline-block;
	color:white;
	@include shadow-inner(0,-3,10,0.10);
	text-shadow:0 1px 0 rgba(0,0,0,0.35);
	text-decoration:none;
	vertical-align:middle;
	outline:none;
	&:hover
	{
	   color:#ffffff;
	}
}



.button-small{
    padding:5px 10px 5px 10px;
	font-size:.5em;
}

.button-medium{
    padding:7px 10px 7px 10px;
	font-size:.9em;
}

.button-large{
    padding:10px 10px 10px 10px;
	font-size:1.2em;
}


.button-normal
{
	background-color:$blue;
	border:1px solid $blue;
	&:hover{
		background-color:#2E7799;
	}
}

.button-warning{
   background-color:$orange-brown;
   border:1px solid $orange-brown;
	&:hover{
		background-color:$orange-dark;
	}	
}

.alert-success{
	background-color: $green-light;
	color:$green-dark;
	
}

.alert-notice,.alert-info{
   background-color: $blue-light;	
   color:$blue-dark;
}

.alert-error,.alert-danger{
	background-color: $red-light;
	color:$red-dark;
}

.alert-warn{
	background-color: $orange-light;
	color:$orange-dark;
}

.depth-line-top{
   	@include single-box-shadow(white, 0px, 1px, 0px, false, true);
   	border-top: 1px solid rgb(187, 187, 187);
}

.depth-line-bottom{
   	@include single-box-shadow(white, 0px, 1px, 0px, false, false);
   	border-bottom: 1px solid rgb(187, 187, 187);
}

.alert{
	@include border-rounded(4);
	@include single-text-shadow;
	border-style:solid;
	border-width:1px;
	margin:10px 0 10px 0;
	padding : 10px 10px 10px 10px;
}

.horizontal-buttons-list
{
    margin:10px 0 0 0;
    padding:0px;
    list-style:none;
	li
	{
	    display:inline-block;
	}		
}

.ico
{
	border:1px solid $white;
	@include border-rounded(4);
	display:inline-block;
	@include shadow-inner(0,-3,10,0.20);
	text-shadow:0 1px 0 rgba(0,0,0,0.35);
	text-decoration:none;
	color:white;
	width:36px;
	text-align:center;
	i:before
	{
		margin-right:auto;
		margin-left:auto;
		display:inline-block;
	}
	
}

.div-basic{
   border:1px solid #cccccc;	
   background:#F2F2F2;	
   @include border-rounded(3);
}




//**********************************************************************************************
//	General
//**********************************************************************************************

.red-line
{
   min-height:4px;
   background-color:$red;
}


#nav-bar { 
    @include  black-matte; 
	@include size(100%,50px);
	@include shadow(0,-3,10,0.75);
	position:relative;
}

#container{
	@include border-rounded(5);
	margin:10px 50px 20px 50px;

}

#izmenu
{
    float:right;
    border:1px solid #A09D9D;
    @include border-radius(4px, 4px);

    ul
    {
        margin:0 0 0 0;
        padding:0 0 0 0;
	    list-style:none;
	    > li.first , >li.first > a {
	      @include border-top-left-radius(4px);
	      @include border-bottom-left-radius(4px);
	    }
	    > li.last ,>li.last > a{
	         @include border-top-right-radius(4px);
	         @include border-bottom-right-radius(4px);
	    }

    }
    li
	{
	       padding:0 0 0 0;
           margin:0 0 0 0;
           border-right:1px solid #A09D9D;
           min-width:125px;
           background-color:$blue;
	}

	a 
	{
	    	background-color:$blue;
	    	text-decoration:none;
	    	padding: 10px 15px 10px 15px;
	    	display: block;
	    	text-align:center;
	    	color:$white;
	    	margin:0 0 0 0;
	}

	a:hover
	{
	    background-color:$white;
	    color:$blue;

	}

    > ul
    {
        float:left;

        .last-item
        {
            border-right:none;
        }
        
	    > li
	    {
	      float:left;
	      display:inline-block;
	      position:relative;
	      .popup-menu
		   {
		        border:1px solid #A09D9D;
	   			position:absolute;
	   			display:none;
	   			z-index:10;
	   			@include border-radius(4px, 4px);
	   			//@include border-rounded(4);
	   			li
	   			{
	   			     border-right:none;
	   			     border-bottom:1px solid #A09D9D;
	   			}
	   			.last-item
	   			{
	   				border-bottom:none;
	   			}
		   }
	    }
    }
}


