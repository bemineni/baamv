	}
}

.side-heading{
	background:$black1;
	display:inline-block;
	color:#ffffff;
	line-height:2.5em;
	padding-left:10px;
	padding-right:10px;
	position:absolute;
	top:-2.5em;
	left:-1px;
	@include border-rounded-top(3);
	@include shadow-inner(0,-3,10,0.20);
}

.highlight-active
{
   
	background:$purplishred;
}



.help-block{
