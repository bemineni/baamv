#main{
    float:left;
	margin-top:5px;
	@include border-rounded(4);
	width:100%;
}

#left{  
     overflow:hidden;
     
     p 
     {
       padding:10px 10px 10px 10px;
     }
}


#right{
	float:right;
	width:350px;
	padding-left: 20px;
}


.side-box{
    border:1px solid #A09D9D;
    margin-top:3.5em;
	background:#E0E0E0;
	position:relative;
	ol
	{
	   list-style:none;
	   margin-left:0px;
	   margin-top:0px;
	   margin-bottom:0px;
	   padding:0;
	   li
	   {
	      //margin-top:3px;
